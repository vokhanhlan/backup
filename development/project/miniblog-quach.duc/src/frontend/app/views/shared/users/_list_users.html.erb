<div class="col-lg-12">
  <% @users.each do |user| %>
    <div class="col-md-3 col-sm-6">
      <div class="panel panel-default text-center">
        <div class="panel-heading">
            <% if user.avatar_path %>
              <div style="width: 150px; height:135px; border:solid">
                <%= image_tag "/upload/"+user.avatar_path,:style => " width: 100%; height: 100%; object-fit: contain;" %>
              </div>
            <% else %>
              <div style="width: 150px; height:135px; border:solid">
               <%= image_tag "no_images.jpeg", :style => " width: 100%; height: 100%; object-fit: contain;" %>
              </div>
            <% end %>
        </div>
        <div class="panel-body">
          <h4><%= user.username %></h4>
          <p><%= user.email %></p>
          <a href="/users/<%= user.id.to_s %>" class="btn btn-primary">About</a>
        </div>
      </div>
    </div>
  <% end %>
</div>

