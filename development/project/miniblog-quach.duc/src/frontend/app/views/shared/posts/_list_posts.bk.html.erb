<div aria-hidden="true" aria-labelledby="myModalLabel" class="modal fade" id="myModal_show" role="dialog" tabindex="-1"></div>
    <div class="table-responsive">
      <table class="table table-hover">
        <tbody id="list_post">
            <% @posts.each do |post| %>
                  <tr>
                  <td><%= post.title %></td>
                  <!-- truncate if descript or content is very long  -->
                  <td><%= post.description .truncate(20, :separator => " ") %></td>
                  <!-- truncate and raw html string  -->
                  <td><%= raw(post.content.truncate(30, :separator => " "))%></td>
                  <td><%= post.thumbnail %></td>
                  <td><%= button_to 'Show', post,:method => :get,:remote => true, "data-target" => "#myModal_show", "data-toggle" => "modal", :class => "btn btn-primary" %></td>
                  </tr>
            <% end %>
        </tbody>
      </table>
    </div>