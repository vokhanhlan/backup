<div class="container">
        <div class="row">
              <%= render  partial: '/shared/flash/flash_messages', locals: {notice_type:"notice"} %>
              <%= render  partial: '/shared/flash/flash_messages', locals: {notice_type:"alert"} %>
            <div class="col-md-4 col-md-offset-4">
                <div class="login-panel panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title"><i class="fa fa-user"></i>&nbsp;<b>PLEASE SIGN IN</b></h3>
                    </div>
                    <div class="panel-body">
                        <%= form_tag sessions_path do %>
                          <form role="form">
                              <fieldset>
                                  <div class="form-group">
                                      <%= text_field_tag :username, (params[:username] or  flash[:user_name]), :class => "form-control",:placeholder => "Email", :autofocus => true ,  :required => true %>
                                  </div>
                                  <div class="form-group">
                                      <%= password_field_tag :password, params[:password], :class => "form-control",:placeholder => "Password",  :required => true %>
                                  </div>
                                  <!-- Change this to a button or input when using this as a form -->
                                   <div class="form-group">
                                      <ul class="list-inline">
                                        <li><%= submit_tag "Log in", :class => "btn btn-lg btn-success pull-left  " %></li>
                                        <li><%= link_to 'Back', root_url, :class => "btn btn-lg btn-default pull-right"  %></li>
                                      </ul>
                                      </div>
                              </fieldset>
                          </form>
                        <% end %>
                    </div>
                </div>
            </div>
        </div>
    </div>