  <%= f.text_field :username, :class => "form-control", :autofocus => true, :placeholder => "Username", :required => true %>
</div>
<div class="form-group">
  <%= f.password_field :password, :class => "form-control",:placeholder => "Password", :required => true  %>
</div>
