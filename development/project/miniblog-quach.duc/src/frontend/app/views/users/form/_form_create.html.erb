   <div class="container">
      <%= form_for @user, :multipart => true do |f| %>
          <% if @user.errors.any? %>
          <%= render  partial: '/shared/flash/flash_messages', locals: {notice_type:"errors_list"} %>
          <% end %>
          <%= render  partial: '/shared/flash/flash_messages', locals: {notice_type:"alert"} %>
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="login-panel panel panel-default">
                    <div class="panel-heading">
                          <h3 class="panel-title"><i class="fa fa-user"></i>&nbsp;<b>REGISTER</b></h3>
                    </div>
                    <div class="panel-body">
                        <form role="form">
                            <fieldset>
                              <div class="form-group">
                                <%= f.email_field :email, :class => "form-control",:placeholder => "E-mail" , :autofocus => true , :required => true %>
                              </div>
                              <div class="form-group">
                                <%= f.text_field :first_name, :class => "form-control",:placeholder => "First name" %>
                              </div>
                              <div class="form-group">
                                <%= f.text_field :last_name, :class => "form-control",:placeholder => "Last name" %>
                              </div>
                              <div class="form-group">
                                <%= f.text_field :address, :class => "form-control",:placeholder => "Address" %>
                              </div>
                              <div class="form-group">
                                <%= f.text_field :birthday, :class => "form-control", :id => "input_birthday",:placeholder => "Birthday(dd/mm/yyyy)" %>
                              </div>
                              <div class="form-group">
                                  <ul class="list-inline">
                                     <li><%= f.check_box :gender %>&nbsp;Male</li>
                                     <!-- <li><%= f.file_field :avatar,:title => "Upload avatar here", :style =>"width: 260px;" %></li> -->
                                      <li><input type="file" id="myUpload" style="display:none" name="user[avatar]"/>
    <button type="button"  class="btn btn-default" data-toggle="button" aria-pressed="false" autocomplete="off" onclick="javascript:document.getElementById('myUpload').click();">Upload Avatar</button></li>
                                  </ul>
                              </div>
                              <hr/>
                              <p class="text-success">LOGIN INFO</p>
                              <div class="form-group">
                                <%= f.text_field :username, :class => "form-control",:placeholder => "Username", :required => true %>
                              </div>
                              <div class="form-group">
                                <%= f.password_field :password, :class => "form-control",:placeholder => "Password",  :required => true  %>
                              </div>
                              <div class="form-group">
                                <%= f.password_field :password_confirmation, :class => "form-control",:placeholder => "Password Confirmation",  :required => true  %>
                              </div>
                                <!-- Change this to a button or input when using this as a form -->
                               <ul class="list-inline">
                                  <li><%= link_to 'Back', root_url, :class => 'btn btn-default'  %></li>
                                  <li><%= f.submit 'Register', :class => 'btn btn-success' %></li>
                              </ul>
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        </div>
      <% end %>
  </div>
<script>
  $('#input_birthday').datepicker({
    format: "dd/mm/yyyy",
    todayBtn: "linked",
    orientation: "top auto",
    multidate: false,
    autoclose: true,
    todayHighlight: true
  });
</script>